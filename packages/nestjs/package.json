{
  "name": "@crud-query-parser/nestjs",
  "version": "0.0.2",
  "description": "NestJS helpers to parse queries from HTTP requests",
  "license": "MIT",
  "author": "Guilherme Chaguri",
  "scripts": {
    "build": "tsup --platform browser",
    "prepublish": "npm run build"
  },
  "tsup": {
    "entry": [
      "src/index.ts",
      "src/parsers/crud/index.ts"
    ],
    "target": "es2022",
    "format": ["esm", "cjs"],
    "outDir": "./dist",
    "dts": true,
    "cjsInterop": true,
    "minify": true,
    "splitting": false,
    "sourcemap": true,
    "clean": true,
    "skipNodeModulesBundle": true,
    "keepNames": true,
    "bundle": true
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "default": "./dist/index.mjs",
        "types": "./dist/index.d.mts"
      },
      "require": {
        "default": "./dist/index.js",
        "types": "./dist/index.d.ts"
      }
    },
    "./parsers/crud": {
      "import": {
        "default": "./dist/parsers/crud/index.mjs",
        "types": "./dist/parsers/crud/index.d.mts"
      },
      "require": {
        "default": "./dist/parsers/crud/index.js",
        "types": "./dist/parsers/crud/index.d.ts"
      }
    }
  },
  "peerDependencies": {
    "@crud-query-parser/core": "*",
    "@nestjs/core": ">=10.0.0",
    "@nestjs/swagger": ">=7.0.0"
  },
  "peerDependenciesMeta": {
    "@nestjs/swagger": {
      "optional": true
    }
  },
  "devDependencies": {
    "@crud-query-parser/core": "*",
    "@nestjs/common": "^10.0.0",
    "@nestjs/swagger": "^7.3.1",
    "@types/node": "^17.0.23",
    "tsup": "^8.1.0",
    "typescript": "^5.5.2"
  }
}
